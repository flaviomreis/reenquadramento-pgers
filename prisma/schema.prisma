generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Simulation {
  id                  String   @id @default(uuid())
  createdAt           DateTime @default(now())
  cargo               String
  instrucao           String
  posicaoAtual        String
  posicao             String
  tempoServicoPublico Int      @default(0)
  dataReferencia      DateTime
  dataPrevistaLei     DateTime
  totalVantagens      Decimal  @default(0)
  produtividade       Decimal  @default(0)
}
